<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/conversation_add_other_layout"
                android:layout_width="240dp"
                android:layout_height="fill_parent"
                android:background="@color/ainemo_white">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
        <ListView
                android:id="@+id/nemo_circle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_above="@+id/add_other"
                android:horizontalSpacing="0dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"/>
        <View
                android:layout_above="@+id/add_other"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/nemo_black_15"/>
        <Button
                android:id="@+id/add_other"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:textColor="@color/ainemo_white"
                android:background="@drawable/contact_detail_action_button_style"
                android:text="@string/add_other"/>
    </RelativeLayout>
</RelativeLayout><!-- From: file:/Users/yinliang/Downloads/vulture/ui/MobileApp/ainemo_open_api/src/main/res/layout/conversation_add_other.xml -->