<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
    <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingTop="10dp">

        <RelativeLayout
                android:id="@+id/picture_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

             <ImageView
                    android:id="@+id/picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_contact_detail_user_capture"
                    android:visibility="gone"
  /> 

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/action_addother_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/picture"
                    android:layout_alignRight="@+id/picture"
                    android:src="@drawable/ic_circle_addother_check"/>

            <ImageView
                    android:id="@+id/picture_device"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_nemo_circle_nemo"/>

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/action_addother_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/picture_device"
                    android:layout_alignRight="@+id/picture_device"
                    android:src="@drawable/ic_circle_addother_check"/>

            <TextView
                    android:id="@+id/prompt_in_calling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:textSize="10sp"
                    android:textColor="@color/ainemo_white"
                    android:text="@string/in_calling"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/picture_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/nemo_black_70"
                android:textSize="13sp"/>
    </RelativeLayout>

