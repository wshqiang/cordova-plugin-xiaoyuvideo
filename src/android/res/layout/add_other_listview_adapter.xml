<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

    <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/nemocircle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:text="circleName"
                android:textColor="@color/nemo_black_70"
                android:textSize="11sp"/>
        <View
                android:id="@+id/mark_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/nemocircle_name"
                android:layout_marginLeft="15dp"
                android:background="@color/nemo_black_15"/>
        <ExpandGridView
                android:id="@+id/gridview"
                android:background="@color/ainemo_white"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/mark_line"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:listSelector="@android:color/white"
                android:numColumns="3"/>
    </RelativeLayout>
</RelativeLayout>